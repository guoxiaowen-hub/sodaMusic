/* 榜单名 */
.recommend{
  width: auto;
  margin:0px auto;
  font-size: 12px;
  border: solid 0px #ffffff;   /**/
  text-align: center;
  padding: 5px;
  color: #ffffff;
}

/* 上侧图片 */
.img_bg{
  width: 100%;
  height: 180px;
  border-radius:5px;
  border: solid 1px #E2F1EC;
  position: relative;
}
.rank_img{
  width: 100%;
  height: 180px;
  border-radius:5px;
  border: solid 0px #E2F1EC;
  /* display: none; */

}
.img_bg > .img_text_bg{
  width: 100px;
  height: 30px;
  border-radius:5px;
  position: relative;
 margin:-40px auto;
  background: #499A86;
  z-index: 10;
}
.img_text{
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #E2F1EC;
  z-index: 12;
}

/* 排行榜列表 */
.rankList{
  margin:auto auto;
  width: 90%;
  height:1200px;
  border:solid 0px #000000;   /*#00ff00*/   /**/
}
/* 每个排行榜 */
.rank{
  width: 80%;
  /* margin: 0px 0px;    */
  height:50px; /*50*/
  border:solid 0px #ffffff;   /**/
  background-color: #6EB8A2;
  border-radius:5px;
  margin: 5px auto;
  display: flex;
  flex-flow: column;
}

.rank_bg{
  width: 85%;
  margin: auto auto;
  background: #6EB8A2;
}
/* 下侧列表 */
.rank_song{
  width: 100%;
  border:solid 0px #000000;   /**/
  color: #E2F1EC;
}
.rank_singer{
  width: 100%;
  border:solid 0px #000000;   /**/
  color: #a8e2cc;
}
.font {
  font-size: 12px;
  line-height: 20px;
  overflow:hidden;
  white-space:nowrap; 
  text-overflow:ellipsis; 
}



.end{
  width: auto;
  margin:0px auto;
  font-size: 12px;
  border: solid 0px #ffffff;   /**/
  /* color: gainsboro; */
  text-align: center;
  padding: 5px;
  color: #ffffff;

}